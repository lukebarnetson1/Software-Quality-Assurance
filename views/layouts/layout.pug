doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || "Byte Sized Bits"
    // Optionally include Bootstrap (CDN example)
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    header
      h1 Byte-Sized Bits
      nav.navbar
        ul
          li
            a(href="/") Home
          if user
            li
              a(href="/create") Create Post
            li
              a(href="/auth/logout") Logout
          else
            li
              a(href="/auth/login") Log In
          li
            a(href="/stats") Stats



    // Flash Alerts
    if flashSuccess && flashSuccess.length
      each msg in flashSuccess
        .alert.alert-success(role="alert")= msg

    if flashError && flashError.length
      each msg in flashError
        .alert.alert-danger(role="alert")= msg

    main
      block content
    // Bootstrap
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
  </body>
