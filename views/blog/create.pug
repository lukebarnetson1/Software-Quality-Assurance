extends ../layouts/layout

block content
  .container.mt-4
    h2 Create a New Post
    form(method="POST", action="/create")
      input(type="hidden", name="_csrf", value=csrfToken)
      .mb-3
        label.form-label(for="title") Title:
        input.form-control(type="text", name="title", placeholder="Enter title", required)
      .mb-3
        label.form-label(for="content") Content:
        textarea.form-control(name="content", placeholder="Enter content", required)
      button.btn.btn-primary(type="submit") Create Post
