extends ../layouts/layout

block content
  .container.mt-4
    h2 #{post.title}
    p.text-muted By #{post.author} (Posted on #{post.created_at.toLocaleString()})
    p #{post.content}
    br
    if user && user.username === post.author
      a.btn.btn-primary.me-2(href=`/edit/${post.id}`) Edit Post
      form(method="POST", action=`/delete/${post.id}`, style="display: inline;")
        input(type="hidden", name="_csrf", value=csrfToken)
        button.btn.btn-danger(type="submit") Delete Post
