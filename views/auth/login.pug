extends ../layouts/layout

block content
  .container.mt-4
    h2 Log In
    form(method="POST", action="/auth/login")
      input(type="hidden", name="_csrf", value=csrfToken)
      .mb-3
        label.form-label(for="identifier") Email or Username:
        input.form-control(type="text", name="identifier", required)
      .mb-3
        label.form-label(for="password") Password:
        input.form-control(type="password", name="password", required)
      .mb-3
        .form-check
          input.form-check-input(type="checkbox", name="rememberMe", id="rememberMe")
          label.form-check-label(for="rememberMe") Remember Me
      button.btn.btn-primary(type="submit") Log In

    .mt-3
      a.btn.btn-link(href="/auth/forgot") Forgot Password?
    .mt-3
      p Don't have an account?
      button.btn.btn-primary(type="button", onclick="window.location.href='/auth/signup'") Sign Up
